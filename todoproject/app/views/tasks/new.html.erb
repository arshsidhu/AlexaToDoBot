<h1>New Task</h1>
<%= form_for :task, url: tasks_path do |f| %>
    <% if @task.errors.any? %>
        <% @task.errors.full_messages.each do |emsg| %>
            <p><%= emsg %></p>
        <% end %>
    <% end %>
    <p>
        <%= f.label :tag %><br>
        <%= f.text_field :tag %>
    </p>
    <p>
        <%= f.label :date %><br>
        <%= f.date_field :date %>
    </p>
    <p>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
    </p>
    <%= f.submit %>
<% end %>
<%= link_to 'Back', tasks_path %>